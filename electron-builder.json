{
  "appId": "com.emutool.app",
  "productName": "EmuTool",
  "copyright": "Copyright Â© 2025 DaMolks",
  "asar": true,
  "directories": {
    "output": "release/${version}",
    "buildResources": "resources"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENCE"
  ],
  "extraResources": [
    {
      "from": "resources/icon.png",
      "to": "icon.png"
    }
  ],
  "protocols": [
    {
      "name": "Dofus Touch Protocol",
      "schemes": [
        "dofustouch"
      ]
    }
  ],
  "win": {
    "icon": "resources/icon.ico",
    "target": [
      {
        "target": "zip",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
  },
  "nsis": {
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "portable": {
    "artifactName": "${productName}-${version}.${ext}"
  },
  "afterPack": "./scripts/afterPackHook.js",
  "mac": {
    "target": [
      {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "category": "public.app-category.games"
  },
  "linux": {
    "executableName": "EmuTool",
    "description": "EmuTool Client for Linux",
    "icon": "resources/icons",
    "desktop": "resources/lindo.desktop",
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "tar.gz",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "mimeTypes": [
      "application/x-binary"
    ],
    "maintainer": "DaMolks"
  }
}
